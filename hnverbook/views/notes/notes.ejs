<!DOCTYPE html>
<html>
<head>
   <title><%= title %></title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <% if (theme === 'dark') {
      %>
      <link rel="stylesheet" href="/stylesheets/dark.css">
      <%
   } else {
      %>
      <link rel="stylesheet" href="/stylesheets/light.css">
      <%
   } %>
   <link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='/stylesheets/notes/index.css' />
<%- include('../partials/head') %>
   <script src="/scripts/index.js" defer type="module"></script>
<script src="/scripts/notes/index.js" defer></script>
</head>
<body>

<%- include('../partials/header', {
theme, title: null, leftIcon: null, click: null, titleClick: null, rightButtons: [{
icon: 'Plus', url: `/notes/create/${spaceId}`, click: null, size: 'normal'
}]}) %>

<div id="app" class="app">
<div id="screen" class="screen">
<h2 class="greet"><%= spaceTitle %></h2>

            <div onclick="window.location.href = '/notes/search/<%= spaceId %>'" class="searchbar">
               <img src="/icon/stroke/Search/<%= theme === 'light' ? '171b20' : 'dbe1e8' %>/30/1.5" width="30" height="30" alt="search">
               <p>Search Notes</p>
            </div>

<div class="notesContainer">
<%- docs %>
</div>
</div>
<%- include('../partials/navigation', {
theme, active: 'notes'
}) %>
</div>

</body>
</html>