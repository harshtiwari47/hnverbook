<!DOCTYPE html>
<html>
<head>
   <title><%= title %></title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <% if (theme === 'dark') {
      %>
      <link rel="stylesheet" href="/stylesheets/dark.css">
      <%
   } else {
      %>
      <link rel="stylesheet" href="/stylesheets/light.css">
      <%
   } %>
   <link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='/stylesheets/notes/view.css' />
<%- include('../partials/head') %>
   <script src="/scripts/index.js" defer type="module"></script>
</head>
<body>

<%- include('../partials/header', {
theme, title: null, leftIcon: null, click: null, titleClick: null, rightButtons: [
   { icon: 'Arrow Left Square', url: 'javascript:void(0)', click: 'window.history.go(-1)', size: 'normal'}
]}) %>

<div id="app" class="app">
<div id="screen" class="screen">
<div style="--background: <%= note.bgColor %>; --color: <%= note.textColor %> " class="noteContainer">
   <div class="noteHeader">
<h2><%= note.title %></h2>
<div class="noteInfo">
   <p class="dateUpdated"><b>UPDATED:</b> <%= note.updatedAt %></p>
</div>
   </div>
<div class="noteDescription">
<%- note.note %>
</div>
</div>
</div>
<%- include('../partials/navigation', {
theme, active: 'notes'
}) %>
</div>

</body>
</html>