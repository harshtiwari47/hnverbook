<!DOCTYPE html>
<html>
<head>
   <title><%= title %></title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <% if (theme === 'dark') {
      %>
      <link rel="stylesheet" href="/stylesheets/dark.css">
      <%
   } else {
      %>
      <link rel="stylesheet" href="/stylesheets/light.css">
      <%
   } %>
   <link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='/stylesheets/settings/index.css' />
<%- include('../partials/head') %>
</head>
<body>
   
<%- include('../partials/header', {
theme, title: null, leftIcon: null, click: null, titleClick: null, rightButtons: [
   { icon: 'Arrow Left Square', url: 'javascript:void(0)', click: 'window.history.go(-1)', size: 'normal'}
]}) %>

<div id="app" class="app">
   <h2>SETTINGS</h2>
<div id="screen" class="screen">
   <div class="general">
   <div class="menu" id="item1">
      <a href="/settings/account">
         <div class="items">
            <img src="/icon/stroke/User/<%= theme === 'light' ? '171b20' : 'dbe1e8' %>/30/1.5" width="30" height="30" alt="icon">
            <p>ACCOUNT</p>
         </div>
      </a>
   </div>
   <div class="menu" id="item2">
      <a href="/set-theme/<%= theme === 'light' ? 'dark' : 'light' %>">
         <div class="items">
            <img src="/icon/stroke/<%= theme === 'light' ? 'Moon' : 'Sun' %>/<%= theme === 'light' ? '171b20' : 'dbe1e8' %>/30/1.5" width="30" height="30" alt="icon">
            <p>THEME</p>
         </div>
      </a>
   </div>
   <div class="menu" id="item3">
      <a href="/auth/logout">
         <div class="items">
            <img src="/icon/stroke/Logout/<%= theme === 'light' ? '171b20' : 'dbe1e8' %>/30/1.5" width="30" height="30" alt="icon">
            <p>LOGOUT</p>
         </div>
      </a>
   </div>
   </div>
   <ul class="about">
      <li><a href="legal/">About Us</a></li>
      <li><a href="legal/">Help</a></li>
      <li><a href="legal/">Support</a></li>
      <li><a href="legal/">Privacy Policy</a></li>
      <li><a href="legal/">Terms of Use</a></li>
   </ul>
</div>
</div>
</body>
</html>